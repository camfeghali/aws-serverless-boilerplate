{
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "allowJs": true,
        "target": "es6",
        "outDir": ".build",
        "moduleResolution": "node",
        "lib": ["es2020", "esnext.asynciterable"],
        "types": ["node", "jest"],
        "rootDir": "./"
    }
}
